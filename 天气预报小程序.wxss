/* pages/天气预报小程序/天气预报小程序.wxss */
.container {
  padding: 20px;
}

.search-box {
  display: flex;
  margin-bottom: 20px;
}

.search-box input {
  flex: 1;
  border: 1px solid #ccc;
  padding: 10px;
  margin-right: 10px;
  border-radius: 4px;
}

.weather-info {
  text-align: center;
  margin-top: 30px;
}

.city {
  font-size: 24px;
  margin-bottom: 10px;
}

.temp {
  font-size: 48px;
  font-weight: bold;
  margin-bottom: 10px;
}

.weather {
  font-size: 18px;
}

.about-link {
  position: fixed;
  bottom: 20px;
  right: 20px;
  color: #1a73e8;
  text-decoration: none;
  font-size: 14px;
}

/* 天气图标样式 */
.weather-info image {
  width: 80px;
  height: 80px;
  margin: 10px auto;
}
